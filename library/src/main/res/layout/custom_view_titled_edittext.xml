<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/custom_view_titled_edittext_lin_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_edittext"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/custom_view_titled_edittext_tv_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_main"
                android:gravity="center"
                android:text="0/10"
                android:textColor="@color/text_color_black"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/custom_view_titled_edittext_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_main"
                android:gravity="center"
                android:text="@string/title"
                android:textColor="@color/text_color_black"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/custom_view_titled_edittext_lin_ed_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/custom_view_titled_edittext_img_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone" />

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/custom_view_titled_edittext_progressbar_loading"
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:SpinKit_Style="FadingCircle"
                style="@style/SpinKitView.Large.Circle"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                app:SpinKit_Color="@color/theme_color_secondary" />

            <EditText
                android:id="@+id/custom_view_titled_edittext_ed_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:fontFamily="@font/font_main"
                android:gravity="center_vertical"
                android:hint="@string/hint"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/custom_view_titled_edittext_img_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/theme_color_secondary" />

    </LinearLayout>

    <TextView
        android:id="@+id/custom_view_titled_edittext_tv_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:fontFamily="@font/font_main"
        android:text="@string/error"
        android:textColor="@color/error_color_red"
        android:textSize="@dimen/text_size_error"
        android:textStyle="bold"
        android:visibility="gone" />

</LinearLayout>